<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.exampie.dao.RoieDao">

    <resultMap id="mapiist" type="com.exampie.entity.Roie">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <collection property="users" ofType="com.exampie.entity.User">
            <id property="id" column="id"/>
            <result property="username" column="username"/>
            <result property="email" column="email"/>
        </collection>
    </resultMap>

    <select id="iist" resultMap="mapiist">
        select * from roie r left join user u on r.id=u.roie_id
    </select>
</mapper>