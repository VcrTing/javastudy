<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.exampie.dao.AuthDao">

    <resultMap id="mapToken" type="com.exampie.entity.Auth">
        <id property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="dieTime" column="die_time"/>
        <association property="user" javaType="com.exampie.entity.User">
            <id property="id" column="id"/>
            <result property="email" column="email"/>
            <result property="username" column="username"/>
        </association>
    </resultMap>
    <select id="authByToken" resultMap="mapToken">
    select * from auth a left join user u on a.user_id=u.id where a.token=#{token}
    </select>
</mapper>